{{> layout/header}}

<div class="container p-5">
    <div class="card">
        <div class="card-header mb-0">
            <h4><b>환불 요청 내역(사용자)</b></h4>
        </div>

        <div class="card-body">
            {{#refundList}}
                <div class="card-body border rounded mb-4">
                    <div class="d-flex justify-content-between">
                        <div class="flex-grow-1">
                            <h5 class="card-title mb-2">환불 요청 #{{id}}</h5>
                            <p class="text-muted mb-2">
                                <i class="fas fa-receipt"></i> 결제 ID: {{paymentId}}
                            </p>
                            <p class="text-muted mb-2">
                                <i class="fas fa-won-sign"></i> 환불 금액: {{amount}} P
                            </p>
                            <p class="text-muted mb-2">
                                <i class="fas fa-comment"></i> 환불 사유: {{reason}}
                            </p>
                            <p class="text-muted mb-2">
                                <i class="fas fa-circle-info"></i> 상태:
                                {{#isPending}}
                                    <span class="badge bg-warning fs-7">{{statusDisplay}}</span>
                                {{/isPending}}
                                {{#isApproved}}
                                    <span class="badge bg-success fs-7">{{statusDisplay}}</span>
                                {{/isApproved}}
                                {{#isRejected}}
                                    <span class="badge bg-secondary fs-7">{{statusDisplay}}</span>
                                {{/isRejected}}
                            </p>
                            <p class="text-muted mb-2">
                                <i class="fas fa-circle-xmark"></i> 거절 사유:
                                <span class="text-danger">{{rejectReason}}</span>
                            </p>
                        </div>

                    </div>
                </div>
            {{/refundList}}
            <!-- 내역이 없을 경우-->
            {{^refundList}}
                <div class="text-center py-5">
                    <i class="fas fa-hourglass fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">환불 내역이 없습니다</h5>
                </div>
            {{/refundList}}
            <div class="mt-4">
                <a href="/user/detail" class="btn btn-secondary">회원정보로 돌아가기</a>
            </div>
        </div>

    </div>
</div>

{{> layout/footer}}